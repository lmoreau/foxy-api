{
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/static/*", "/images/*", "/*.{png,jpg,gif,svg,js,css}", "/api/*"]
    },
    "routes": [
      {
        "route": "/api/*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "rewrite": "/api/api"
      },
      {
        "route": "/*",
        "serve": "/index.html",
        "statusCode": 200
      }
    ],
    "mimeTypes": {
      ".json": "text/json",
      ".js": "text/javascript",
      ".css": "text/css",
      ".html": "text/html",
      ".png": "image/png",
      ".jpg": "image/jpeg",
      ".svg": "image/svg+xml"
    },
    "globalHeaders": {
      "content-type": "text/html"
    },
    "responseOverrides": {
      "404": {
        "rewrite": "/index.html",
        "statusCode": 200
      }
    }
}